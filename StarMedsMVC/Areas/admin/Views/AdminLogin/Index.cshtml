<style>
    * {
        box-sizing: border-box;
    }

    body, html {
        margin: 0;
    }
    body{
        background:#f1f1f1;
          font-family: verdana;
    }


.login {
  width: 450px;
  margin: 16px auto;
  font-size: 16px;
}

.login-header,
.login p {
  margin-top: 0;
  margin-bottom: 0;
}


.login-triangle {
  width: 0;
  margin-right: auto;
  margin-left: auto;
  border: 12px solid transparent;
  border-bottom-color: #28d;
}

.login-header {
  background: #28d;
  padding: 20px;
  font-size: 1.4em;
  font-weight: normal;
  text-align: center;
  text-transform: uppercase;
  color: #fff;
}

.login-container {
  background: #fff;
 padding: 20px 15px;
}


.login p {
  padding: 12px;
}

.login input {
  box-sizing: border-box;
  display: block;
  width: 100%;
  border-width: 1px;
  border-style: solid;
  padding: 16px;
  outline: 0;
  font-family: inherit;
  font-size: 0.95em;
  margin-bottom:17px;
}

.login input {
  background: #fff;
  border-color: #bbb;
  color: #555;
}


.login input:focus{
  border-color: #888;
}

.login button {
    background: #28d;
    border-color: transparent;
    color: #fff;
    cursor: pointer;
    width: 100%;
    height: 45px;
    line-height: 45px;
    padding: 0px;
    font-size: 18px;
}

.login button:hover {
  background: #17c;
   border-color: transparent;
}

/* Buttons' focus effect */
.login button:focus {
    border-color: transparent;
}
.login-container label {
    margin-bottom: 10px;
    display: block;
}
.checkbox {
    float: left;
    width: 100%;
}

input[type="checkbox"] {
    float: left;
    width: auto;
    margin-right: 15px;
}

.checkbox label {
    margin-bottom: 15px;
}
</style>

@model StarMedsMVC.CustomerDetail
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Index", "AdminLogin", FormMethod.Post))
{
<div class="login">
    <h2 class="login-header">Sign In</h2>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @if (@ViewBag.Message != null)
    {
    <div style="border: 1px solid red">
        @ViewBag.Message
    </div>
    }


    <div class="login-container">

        <div class="form-group">
            <label for="UserName">User Name:</label>
            @Html.TextBox("UserName", null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="UserName">Password:</label>
            @Html.Password("Password", null, new { @class = "form-control" })
        </div>
        <div class="checkbox">
            <label><input type="checkbox"> Remember me</label>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>

    </div>
</div>
} 