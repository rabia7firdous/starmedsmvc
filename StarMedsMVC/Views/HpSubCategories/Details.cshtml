@model List<SubCategory>

@{
    ViewBag.Title = "Health Products SubCategories";
}

<h2>Details</h2>

<div>
    <h4>Health Products SubCategories</h4>
    <hr />
    <div>
        @foreach (var subCat in Model)
        {
            <div class="categories">

                <div class="product-image">
                    <a href='@Url.Action("Details", "HpSubClassifications", new { id = subCat.SubCat_Id })'>
                        <img class="img-responsive" src="https://static2.medplusmart.com/products/HORL0071_S.jpg?v=51ae0a" alt="product-image">
                    </a>
                </div>

                <div class="product-info">

                    <h6 class="caps lhgt20">

                        <span class="productName">@subCat.SubCatName</span>

                    </h6>
                </div>
            </div>
        }

    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
<style>
    .categories {
        width: 33%;
        border: 1px solid red;
        float: left;
    }
</style>
