@model List<PharmacySubCategory>

@{
    ViewBag.Title = "Pharmacy SubCategories";
}

<h2>PharmacySubCategory</h2>


<div>   
    <hr class="dotted-line">
    <div class="categories-wrapper">
        @foreach (var subCat in Model)
        {
            <div class="categories">

                <div class="product-image">
                    <a href='@Url.Action("Details", "PharmacyProducts", new { id = subCat.PharmacySubCatId })'>
                        @if (subCat.PharmacySubCatImage != null)
                        {
                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(subCat.PharmacySubCatImage))">
                        }
                        else
                        {
                            <img class="img-responsive" src="~/Images/no-image-found.png" alt="product-image">
                        }
                    </a>
                </div>

                <div class="product-info">
                    <h3>@subCat.PharmacySubCatName</h3>
                </div>
            </div>
        }

    </div>
</div>

